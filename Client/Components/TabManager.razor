<div class="try-mud-tabs">
    <div class="try-mud-tabs-toolbar">
        <div class="try-mud-tabs-toolbar-inner">
            <div class="try-mud-tabs-toolbar-content">
                <div class="try-mud-tabs-toolbar-wrapper tabs-wrapper">
                    @if (Tabs != null)
                    {
                        @for (var i = 0; i < Tabs.Count; i++)
                        {
                            var tab = Tabs[i];
                            var activeClass = i == ActiveIndex ? "try-mud-tab-active" : string.Empty;
                            var currentIndex = i;

                            <div class="try-mud-tab @activeClass mud-ripple" @onclick="@(() => ActivateTabAsync(currentIndex))" title="@tab">
                                @tab
                                @if (currentIndex != DefaultActiveIndex)
                                {
                                    <MudIconButton Icon="@Icons.Material.Filled.Close" Color="Color.Inherit" Size="Size.Small" OnClick="@(() => CloseTabAsync(currentIndex))" Class="ml-4 mr-n2" />
                                }
                            </div>
                        }
                    }

                    <div class="try-mud-tab pa-0 px-1" style="@TabCreatingDisplayStyle">
                        <form @onsubmit="@CreateTabAsync" autocomplete="off" class="try-mud-tab-form-input">
                            <input class="try-mud-tab-input"
                                @ref="newTabInput"
                                @bind="@newTab"
                                @onblur="@CreateTabAsync"
                                placeholder=" .razor OR .cs" />
                        </form>
                    </div>
                    <MudIconButton Icon="@Icons.Material.Filled.Add" @onclick="@InitTabCreating" Class="rounded-0" Style="color:#fff; padding: 6px 12px;"/>
                </div>
            </div>
        </div>
    </div>
</div>

